<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>forgerock-guava</artifactId>
    <groupId>org.forgerock.commons.guava</groupId>
    <version>18.0.4</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>forgerock-guava-escape</artifactId>
  <name>Google Guava Escape</name>
  <description>Repackaged version of Guava to avoid dependency collisions.</description>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>${manifestSourceLocation}</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>parse-version</id>
            <goals>
              <goal>parse-version</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.forgerock.commons.guava:forgerock-guava-all</include>
            </includes>
          </artifactSet>
          <filters>
            <filter>
              <artifact>org.forgerock.commons.guava:forgerock-guava-all</artifact>
              <includes>
                <include>org/forgerock/guava/common/escape/**</include>
              </includes>
            </filter>
          </filters>
          <transformers>
            <transformer>
              <manifestEntries>
                <Bundle-Version>${parsedVersion.osgiVersion}</Bundle-Version>
                <Import-Package>javax.annotation;resolution:=optional,org.forgerock.guava.common.base;version="${parsedVersion.osgiVersion}"</Import-Package>
                <Export-Package>org.forgerock.guava.common.escape;version="${parsedVersion.osgiVersion}"</Export-Package>
              </manifestEntries>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.forgerock.commons.guava</groupId>
      <artifactId>forgerock-guava-annotations</artifactId>
      <version>18.0.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.forgerock.commons.guava</groupId>
      <artifactId>forgerock-guava-base</artifactId>
      <version>18.0.4</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.google.code.findbugs</groupId>
      <artifactId>jsr305</artifactId>
      <version>1.3.9</version>
      <scope>provided</scope>
      <optional>true</optional>
    </dependency>
  </dependencies>
</project>

